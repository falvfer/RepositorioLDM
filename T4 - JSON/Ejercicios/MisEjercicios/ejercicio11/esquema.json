{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Ejercicio 11",
    "type": "object",
    "properties": {
        "$schema": {
            "description": "Direcci√≥n del esquema que usar para validar los datos",
            "type": "string"
        },
        "metodo": {
            "type": "string",
            "enum": ["tarjeta", "paypal"]
        }
    },
    "required": ["metodo"],
    "if": {
        "properties": { "metodo": { "const": "tarjeta" } }
    },
    "then": {
        "properties": {
            "$schema": {}, "metodo": {},
            "nTarjeta": {
                "type": "string",
                "pattern": "^[0-9]{16}$"
            },
            "cvv": {
                "type": "string",
                "pattern": "^[0-9]{3}$"
            }
        },
        "required": ["nTarjeta", "cvv"],
        "additionalProperties": false
    },
    "else": {
        "properties": {
            "$schema": {}, "metodo": {},
            "correo": {
                "type": "string",
                "pattern": "^[a-z.]{6,}@[a-z]{3,}.[a-z]{3,}$"
            }
        },
        "required": ["correo"],
        "additionalProperties": false
    }
}