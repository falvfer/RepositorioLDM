{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "clientes",
    "type": "object",
    "properties": {
        "nombre": {
            "type": "string"
        },
        "edad": {
            "type": "integer",
            "minimum": 18
        },
        "email": {
            "type": "string",
            "format": "email"
        }
    },
    "required": ["nombre", "edad"]
}